<!-- 标题信息 -->
<div class="card mb-4">
  <h1 class="main-title">{{ include.data.basic.title }}</h1>
  <p class="sub-title"><strong>客户姓名：</strong>{{ include.data.basic.client_name }}（{{ include.data.basic.travelers }}人）</p>
  <p class="sub-title"><strong>行程日期：</strong>{{ include.data.basic.start_date }} 至 {{ include.data.basic.end_date }}</p>
</div>

<!-- 参团与离团信息 -->
{% if include.data.options.show_join_leave %}
<div class="card mb-4">
  <h2>参团与离团信息</h2>

  <h3>上团信息</h3>
  <p><strong>上团地点：</strong>{{ include.data.join_info.join_city }}</p>
  <p><strong>上团日期：</strong>{{ include.data.join_info.join_date }}；{{ include.data.join_info.join_note }}</p>
  <p><strong>航班信息：</strong>{{ include.data.join_info.join_flight }}</p>

  <h3>下团信息</h3>
  <p><strong>下团地点：</strong>{{ include.data.leave_info.leave_city }}</p>
  <p><strong>下团日期：</strong>{{ include.data.leave_info.leave_date }}；{{ include.data.leave_info.leave_note }}</p>
  <p><strong>航班信息：</strong>{{ include.data.leave_info.leave_flight }}</p>

  {% if include.data.important_note %}
  <p class="important-note">{{ include.data.important_note }}</p>
  {% endif %}
</div>
{% endif %}

<!-- 每日行程 -->
{% if include.data.options.show_daily %}
<div class="card mb-4">
  <h2>每日行程安排</h2>
  {% for d in include.data.daily_itinerary %}
  <div class="day-block">
    <h3>第{{ d.day }}天 ｜ {{ d.date }} ｜ {{ d.weekday }}</h3>
    <h4>{{ d.title }}</h4>
    <p>{{ d.content | newline_to_br }}</p>
    {% if d.hotel %}
    <p><strong>夜宿：</strong>{{ d.hotel.name }}</p>
    <p><strong>地址：</strong>{{ d.hotel.address }}</p>
    {% endif %}
  </div>
  {% if forloop.last == false %}
  <hr>
  {% endif %}
  {% endfor %}
</div>
{% endif %}

<!-- 费用信息 -->
{% if include.data.options.show_expense %}
<div class="card mb-4">
  <h2>费用信息</h2>
  <h3>已含费用</h3>
  <ul>
    {% for i in include.data.expense.included %}
    <li>{{ i }}</li>
    {% endfor %}
  </ul>
  <h3>不含费用</h3>
  <ul>
    {% for i in include.data.expense.excluded %}
    <li>{{ i }}</li>
    {% endfor %}
  </ul>
</div>
{% endif %}
